QComboBox {
  background-color: #ffffff;
  color: #2b2b2b;
  border: 1px solid #cccccc;
  border-radius: 6px;
  padding: 4px 8px;
}

QComboBox::drop-down {
    border: none;
    background: transparent;
    width: 24px;
}

QComboBox:hover,
QComboBox:focus {
  border: 1px solid #5a8dee;
}

QComboBox:disabled {
    background-color: #cccccc;
    color: #7a7a7a;
    border: 1px solid #cccccc;
}
